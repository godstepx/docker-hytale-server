{
  "name": "docker-hytale-server",
  "version": "1.0.0",
  "description": "Hytale Dedicated Server Docker Image",
  "type": "module",
  "scripts": {
    "build": "bun run build:all",
    "build:all": "bun run build:setup && bun run build:healthcheck",
    "build:setup": "bun build ./src/setup.ts --compile --target=bun-linux-x64-baseline --outfile dist/setup",
    "build:healthcheck": "bun build ./src/healthcheck.ts --compile --target=bun-linux-x64-baseline --outfile dist/healthcheck",
    "dev": "bun run src/setup.ts",
    "dev:healthcheck": "bun run src/healthcheck.ts",
    "lint": "tsc --noEmit",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
